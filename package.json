{
  "name": "cbjohnson.info",
  "scripts": {
    "dist": "gulp clean && gulp dist",
    "co-gh-pages": "git checkout gh-pages",
    "co-master": "git checkout master",
    "write-dist": "cp -rf public/* ./ && rm -rf ./public",
    "commit-dist" : "git add --all ./ && git commit --all --message 'gh-pages update'",
    "push-dist": "git push origin gh-pages",
    "dry-publish-dist": "npm run write-dist && npm run commit-dist",
    "publish-dist": "npm run write-dist && npm run commit-dist && npm run push-dist",
    "gh-pages-stage": "npm run dist && npm run co-gh-pages && npm run dry-publish-dist && npm run co-master",
    "gh-pages-publish": "npm run dist && npm run co-gh-pages && npm run publish-dist && npm run co-master"
  },
  "dependencies": {
    "gulp": "^3.9.0",
    "del": "^2.2.0",
    "gulp-imagemin": "^2.4.0",
    "gulp-atomizer": "^1.0.6",
    "gulp-concat": "^2.6.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-postcss": "^6.0.1",
    "postcss-import": "^7.1.3",
    "autoprefixer": "^6.1.2",
    "postcss-media-minmax": "^2.1.1",
    "postcss-custom-media": "^5.0.0",
    "postcss-custom-selectors": "^3.0.0",
    "postcss-modular-scale": "^2.5.1",
    "postcss-nested": "^1.0.0",
    "postcss-css-variables": "^0.5.1",
    "postcss-strip-units": "^1.0.1",
    "postcss-calc": "^5.0.0",
    "postcss-responsive-type": "^0.3.2",
    "postcss-color-function": "^2.0.0",
    "postcss-color-gray": "^3.0.0",
    "postcss-merge-rules": "^2.0.3",
    "css-mqpacker": "^4.0.0",
    "gulp-useref": "^3.0.4",
    "gulp-if": "^2.0.0",
    "gulp-minify-css": "^1.2.2",
    "gulp-rev": "^6.0.1",
    "gulp-rev-replace": "^0.4.2",
    "normalize.css": "^3.0.3",
    "octicons": "^3.1.0"
  },
  "devDependencies": {
    "http-server": "^0.8.5",
    "standard": "^5.4.1",
    "babel-eslint": "^5.0.0-beta6",
    "stylelint": "^2.3.7",
    "stylelint-config-suitcss": "^1.0.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint"
  }
}
